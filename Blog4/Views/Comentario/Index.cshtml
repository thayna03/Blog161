        <body>
            <img src="~/Imagens/download.jfif" class="rounded mx-auto d-block" alt="...">


        </body>
    </div>

</center>
   
<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
