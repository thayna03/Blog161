@model IEnumerable<WebApplication1.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.CategoriaId">Editar</a>
                <a asp-action="Details" class="btn btn-dark" asp-route-id="@item.CategoriaId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoriaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
